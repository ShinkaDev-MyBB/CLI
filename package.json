{
    "name": "shinka-cli",
    "version": "0.0.1a",
    "description": "Command line tool for developing MyBB plugins.",
    "license": "Unlicense",
    "engines": {
        "node": ">=8.0.0"
    },
    "main": "./bin/shinka.js",
    "bin": {
        "shinka": "./bin/shinka.js"
    },
    "directories": {
        "bin": "./bin",
        "dist": "./dist"
    },
    "files": [
        "bin",
        "dist",
        "README.md",
        "LICENSE.md"
    ],
    "scripts": {
        "prepublishOnly": "yarn lint && yarn prettier && yarn test",
        "prettier": "prettier --write '**/*.{js,json,css,md}'",
        "lint": "eslint --fix ./bin ./src",
        "test": "jest",
        "test:watch": "yarn test --watch",
        "build": "babel src -d dist/lib && babel bin -d dist/bin && babel version.js -d dist && cp shinka.json dist/shinka.json"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,css,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "keywords": [
        "shinka",
        "mybb"
    ],
    "dependencies": {
        "chalk": "^2.4.1",
        "cli-progress": "^2.0.0",
        "commander": "^2.15.1",
        "progress": "^2.0.0"
    },
    "devDependencies": {
        "@types/jest": "^22.2.3",
        "@types/shelljs": "^0.8.0",
        "babel-cli": "^6.26.0",
        "babel-eslint": "^8.2.6",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-preset-env": "^1.7.0",
        "eslint": "^4.19.1",
        "husky": "^1.0.0-rc.7",
        "jest": "^23.0.0",
        "lint-staged": "^7.1.2",
        "prettier": "^1.12.1",
        "shelljs": "^0.8.2"
    }
}
