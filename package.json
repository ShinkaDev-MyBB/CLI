{
    "name": "shinka-cli",
    "version": "0.0.1",
    "description": "Command line tool for developing MyBB plugins.",
    "repository": "https://github.com/ShinkaDev-MyBB/cli",
    "author": { 
        "name" : "Kalyn Robinson", 
        "email" : "kalyndrobinson@gmail.com",
        "url" : "https://github.com/kalynrobinson"
    },
    "license": "Unlicense",
    "engines": {
        "node": ">=8.0.0"
    },
    "main": "./dist/bin/shinka.js",
    "bin": {
        "shinka": "./dist/bin/shinka.js"
    },
    "directories": {
        "bin": "./bin",
        "dist": "./dist"
    },
    "files": [
        "README.md",
        "LICENSE.md"
    ],
    "scripts": {
        "prepublishOnly": "yarn lint && yarn prettier && yarn test && yarn docs",
        "prettier": "prettier --write '**/*.{js,json,css,md}'",
        "lint": "eslint --fix ./bin ./src",
        "test": "jest",
        "test:watch": "yarn test --watch",
        "build": "babel src -d dist/src && babel bin -d dist/bin && babel version.js -d dist",
        "docs": "node scripts/document.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,css,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "keywords": [
        "shinka",
        "mybb"
    ],
    "dependencies": {
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "chalk": "^2.4.1",
        "cli-progress": "^2.0.0",
        "commander": "^2.15.1",
        "progress": "^2.0.0"
    },
    "devDependencies": {
        "@types/jest": "^22.2.3",
        "@types/shelljs": "^0.8.0",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-eslint": "^8.2.6",
        "babel-jest": "^23.4.2",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-preset-env": "^1.7.0",
        "esdoc-ecmascript-proposal-plugin": "^1.0.0",
        "esdoc": "^1.1.0",
        "esdoc-standard-plugin": "^1.0.0",
        "eslint": "^4.19.1",
        "husky": "^1.0.0-rc.7",
        "jest": "^23.0.0",
        "jsdoc": "^3.5.5",
        "lint-staged": "^7.1.2",
        "prettier": "^1.12.1",
        "shelljs": "^0.8.2"
    }
}
